services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: baazaar-app
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - ./:/var/www/html

    # Load DB_* from compose.env
    env_file:
      - compose.env

    environment:
      - DB_SSLMODE=require
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - CACHE_STORE=redis
      - SESSION_DRIVER=redis
      - QUEUE_CONNECTION=redis

    depends_on:
      - redis

    ports:
      - "80:80"
      - "443:443"

    networks:
      - baazaar-network

  redis:
    image: redis:7-alpine
    container_name: baazaar-redis
    restart: unless-stopped
    command: redis-server --appendonly yes
    volumes:
      - redis-data:/data
    networks:
      - baazaar-network
    ports:
      - "6379:6379"

volumes:
  redis-data:

networks:
  baazaar-network:
    driver: bridge
